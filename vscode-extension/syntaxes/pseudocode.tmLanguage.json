{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pseudocode",
  "scopeName": "source.pseudocode",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.pseudocode",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.pseudocode",
          "match": "\\b(daca|pentru|cat|repeta)\\b"
        },
        {
          "name": "keyword.control.flow.pseudocode",
          "match": "\\b(atunci|altfel|executa|timp|pana|cand|sf)\\b"
        },
        {
          "name": "support.function.pseudocode",
          "match": "\\b(citeste|scrie)\\b"
        },
        {
          "name": "keyword.operator.logical.pseudocode",
          "match": "\\b(SAU|sau|SI|si|NOT|not)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.pseudocode",
          "match": "<-?>|<-->"
        },
        {
          "name": "keyword.operator.arithmetic.pseudocode",
          "match": "\\+|-|\\*|/|%|âˆš"
        },
        {
          "name": "keyword.operator.comparison.pseudocode",
          "match": "==|!=|<=|>=|<|>|="
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pseudocode",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pseudocode",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.pseudocode",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.pseudocode",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.pseudocode",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.pseudocode",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
